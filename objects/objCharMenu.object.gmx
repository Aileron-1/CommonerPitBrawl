            <string>switch (buttonListen) {
case "back": 
    room_goto(rmMenu);
    buttonListen = "";
break;

case "save": 
    objCharacter.name = tempName;
    objCharacter.age = tempAge;
    objCharacter.race = tempRace;
    objCharacter.sprite_index = tempSprite;
    objCharacter.image_index = tempIndex;
    room_goto(rmMenu);
    buttonListen = "";
break;

case "name":
    msg = get_string_async("Enter Name:", tempName);
    dialog = buttonListen;
    buttonListen = "";
break;

case "age":
    msg = get_string_async("Enter Age:", tempAge);
    dialog = buttonListen;
    buttonListen = "";
break;

case "race":
    msg = get_string_async("Enter Race:", tempRace);
    dialog = buttonListen;
    buttonListen = "";
break;

case "reroll":
    RerollStats(objCharacter.id, 0);
    buttonListen = "";
break;

case "sprite1":
    tempIndex += 1;
    tempIndex = tempIndex mod sprite_get_number(tempSprite);
    buttonListen = "";
break;

case "sprite2":
    tempIndex -= 1;
    tempIndex = tempIndex+(sprite_get_number(tempSprite));  // fix negative value
    tempIndex = tempIndex mod sprite_get_number(tempSprite);
    buttonListen = "";
break;
}

